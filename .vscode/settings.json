{
  "commentTranslate.multiLineMerge": true,
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "wxml",
  ],
  "[wxml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[wxss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.documentSelectors": [
    "**/*.wxml",
    "**/*.wxss"
  ],
  "files.autoSave": "onFocusChange"
}